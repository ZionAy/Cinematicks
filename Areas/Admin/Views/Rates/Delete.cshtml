@model Rate

@{
	ViewData["Title"] = "Admin - Delete Rate";
}

<div class="content-section">
	<h2 class="content-title">Delete rate</h2>
	<hr />
	<h3 class="content-subtitle">Rate details</h3>
	<div class="row">
		<div class="col-12 col-md-6">
			<div class="admin-delete-details">
				<span><strong>Code:</strong> @Model.Code</span>
				<span><strong>Minimun age:</strong> @Model.MinAge</span>
				<span><strong>Movies:</strong> @Model.Movies.Count</span>
				<span><strong>Description:</strong></span>
				<multiline text="@Model.Description"></multiline>
				<span><strong>Image:</strong></span>
				<div>
					<img class="img-fluid" src="~/images/@Model.Image.FilePath" />
				</div>
			</div>
		</div>
		<hr />
		<div class="col-12 text-center">
			<h3>Are you sure you want to delete this?</h3>
			<form asp-action="Delete">
				<input type="hidden" asp-for="ID" />
				<input type="submit" value="Delete" class="btn btn-danger" />
			</form>
		</div>
	</div>
</div>

<hr />

<div>
	<a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

