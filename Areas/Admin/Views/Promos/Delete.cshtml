@model Promo

@{
	ViewData["Title"] = "Admin - Delete Promo";
}


<div class="content-section">
	<h2 class="content-title">Delete Promo</h2>
	<hr />
	<h3 class="content-subtitle">Promo details</h3>
	<div class="row">
		<div class="col-12 col-md-6">
			<div class="admin-delete-details">
				<span><strong>Name:</strong> @Model.Name</span>
				<span><strong>Starting on:</strong> @Model.StartTime.ToString("dd/MM/yyyy")</span>
				<span><strong>Ending on:</strong> @Model.EndTime.ToString("dd/MM/yyyy")</span>
				<span><strong>Description:</strong></span>
				<multiline text="@Model.Description"></multiline>
				<span><strong>Banner:</strong></span>
				<div>
					<img class="img-fluid" src="~/images/@Model.Banner.FilePath" />
				</div>
			</div>
		</div>
		<hr />
		<div class="col-12 text-center">
			<h3>Are you sure you want to delete this?</h3>
			<form asp-action="Delete">
				<input type="hidden" asp-for="ID" />
				<input type="submit" value="Delete" class="btn btn-danger" />
			</form>
		</div>
	</div>
</div>

<hr />

<div>
	<a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>


