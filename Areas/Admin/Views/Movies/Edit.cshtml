@model NewMovieViewModel

@{
	ViewData["Title"] = "Admin - Edit movie";
}

<div class="content-section">
	<h2 class="content-title">Edit movie - @Model.Movie.Title</h2>
	<hr />
	<form asp-action="Edit" role="form">
		<input type="hidden" asp-for="Movie.ID" />
		<div class="row">
			<div asp-validation-summary="ModelOnly" class="col-12 text-danger"></div>
		</div>
		<div class="row">
			<div class="form-group col-12 col-md-6">
				<label asp-for="Movie.Title" class="control-label"></label>
				<input asp-for="Movie.Title" class="form-control" />
				<span asp-validation-for="Movie.Title" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="form-group col-12 col-sm-6 col-md-4 col-lg-3">
				<label asp-for="Movie.Release" class="control-label"></label>
				<input asp-for="Movie.Release" class="form-control" />
				<span asp-validation-for="Movie.Release" class="text-danger"></span>
			</div>
			<div class="form-group col-12 col-sm-6 col-md-4 col-lg-3">
				<label asp-for="Movie.Time" class="control-label"></label>
				<input asp-for="Movie.Time" class="form-control" />
				<span asp-validation-for="Movie.Time" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="form-group col-12 col-md-6">
				<label asp-for="Movie.RateID" class="control-label"></label>
				<select asp-for="Movie.RateID" class="form-control" asp-items="ViewBag.RateID">
					<option selected="selected" disabled="disabled">Choose rate...</option>
				</select>
				<span asp-validation-for="Movie.RateID" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="form-group col-12 col-sm-6 col-md-4 col-lg-3">
				<label asp-for="Movie.Trailer" class="control-label"></label>
				<input asp-for="Movie.Trailer" class="form-control" />
				<span asp-validation-for="Movie.Trailer" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="form-group col-12 col-sm-6 col-md-4 col-lg-3">
				<div class="checkbox">
					<label>
						@Html.DisplayNameFor(g => g.Movie.IsDub) <input asp-for="Movie.IsDub" />
					</label>
				</div>
				<span asp-validation-for="Movie.IsDub" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="form-group col-12 col-md-6">
				<label asp-for="Movie.Director" class="control-label"></label>
				<input asp-for="Movie.Director" class="form-control" />
				<span asp-validation-for="Movie.Director" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="form-group col-12 col-md-6">
				<label asp-for="Movie.Actors" class="control-label"></label>
				<input asp-for="Movie.Actors" class="form-control" />
				<span asp-validation-for="Movie.Actors" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="form-group col-12 col-md-6">
				<label asp-for="Movie.Plot" class="control-label"></label>
				<textarea asp-for="Movie.Plot" rows="5" class="form-control"></textarea>
				<span asp-validation-for="Movie.Plot" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<fieldset class="form-group col-12 col-md-6">
				<legend>Genres</legend>
				@foreach (GenresInMovie item in Model.Genres)
				{
					<div class="checkbox">
						<input type="checkbox" name="GenreList" id="genre-@item.GenreID" value="@item.GenreID" @(item.InMovie ? "checked=\"checked\"" : "") /><span></span>
						<label class="form-check-label" for="genre-@item.GenreID">@item.GenreName</label>
					</div>
				}
				<span asp-validation-for="Genres" class="text-danger"></span>
			</fieldset>
		</div>
		<div class="row">
			<div class="form-group col-12 col-sm-6 col-md-4 col-lg-3">
				<label asp-for="Movie.PosterID" class="control-label"></label>
				<select id="admin-image-select" asp-for="Movie.PosterID" class="form-control" asp-items="ViewBag.PosterID">
					<option selected="selected" disabled="disabled">Choose Poster...</option>
				</select>
				<span asp-validation-for="Movie.PosterID" class="text-danger"></span>
			</div>
		</div>
		<div id="admin-image-preview"></div>
		<div class="form-group">
			<input type="submit" value="Save" class="btn btn-default" />
		</div>
	</form>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

