@model IEnumerable<Show>

@{
	ViewData["Title"] = "Admin - Shows";
}

<div class="content-section">
	<h2 class="content-title">Shows</h2>
	@Html.Partial("_Alert")
	<div class="admin-page-bar">
		<a asp-action="Create" class="btn btn-primary">New Show</a>
		<form asp-action="Index" class="form-inline search-form">
			<input type="search" placeholder="Search for movie show..." aria-label="Search for" name="find" class="search-control" />
			<button type="submit" class="btn btn-success search-button">
				<i class="fa fa-search" aria-hidden="true"></i>
			</button>
		</form>
	</div>
	<hr />

	<div class="row align-items-stretch">
		@if (Model.Count() > 0)
		{
			@foreach (Show show in Model)
			{
				<div class="col-12 col-sm-6 col-md-4 col-lg-3 align-items-stretch">
					<div class="admin-card">
						<h3 class="admin-card-header">@show.Hall.Name<br />@show.TimeShow</h3>
						<div class="admin-card-body">
							<span><strong>Movie:</strong> @show.Movie.Title</span>
							<span><strong>Tickets:</strong> @show.Tickets.Count</span>
							<span><strong>Duration:</strong> @show.Movie.Time mins</span>

						</div>
						<div class="admin-card-footer">
							<a asp-action="Edit" asp-route-id="@show.ID" class="btn btn-warning">Edit</a>
							<a asp-action="Info" asp-route-id="@show.ID" class="btn btn-info mx-1">Info</a>
							<a asp-action="Delete" asp-route-id="@show.ID" class="btn btn-danger">Delete</a>
						</div>
					</div>
				</div>
			}
		}
		else
		{
			<div class="col">
				<p>There are no cinemas.</p>
			</div>
		}
	</div>
</div>

<hr />

<a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">Back to dashboard</a>

