@model IEnumerable<Movie>

@{
	ViewData["Title"] = "Search for Movies";
}


<div class="content-section">
	<h2 class="content-title">Movies search results</h2>
	<p class="search-filter-bar">
		Search for &quot;<strong>@ViewBag.Find</strong>&quot; by movie <strong>@ViewBag.Filter</strong>
	</p>
	@if (Model.Count() > 0)
	{
		<div class="row justify-content-center">
			@foreach (Movie movie in Model)
			{
				<div class="col-12 col-sm-6 col-md-4 col-lg-3">
					@Html.Partial("_MovieCard", movie)
				</div>
			}
		</div>
	}
	else
	{
		<div>
			<p>no movies were found.</p>
		</div>
	}
</div>

@section ModalTrailer {
	@{await Html.RenderPartialAsync("_ModalTrailer");}
}