<!DOCTYPE html>
<html lang="en-us">
<head>
	<!-- Metadata Info -->
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />

	<!-- Website favicon -->
	<link rel="icon" href="~/favicon.ico" type="image/x-icon" />

	<!-- Load resources (Development uses original, Production uses CDNs and minified) -->
	<environment include="Development">
		<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" type="text/css" />
		<link rel="stylesheet" href="~/lib/fontawesome/css/font-awesome.css" type="text/css" />
		<link rel="stylesheet" href="~/css/main.css" type="text/css" asp-append-version="true" />
	</environment>
	<environment exclude="Development">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" type="text/css" asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css" asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
		<link rel="stylesheet" href="~/lib/fontawesome/css/font-awesome.min.css" type="text/css" />
		<link rel="stylesheet" href="~/css/main.min.css" type="text/css" asp-append-version="true" />
	</environment>

	<!-- Varela Round font from google (hebrew is supported) -->
	<link href="https://fonts.googleapis.com/css?family=Varela+Round&amp;subset=hebrew" rel="stylesheet">

	<!-- Title of the page -->
	<title>Cinematicks | @ViewData["Title"]</title>
</head>
<body>
	<!-- Site wrapper -->
	<div id="site-wrapper">
		<!-- Top header -->
		<header id="site-header">
			<a asp-area="" asp-controller="Home" asp-action="" id="site-logo">
				<img src="~/images/System/logo.png" alt="Logo" />
				<h1 class="d-none d-md-block">Cinematicks</h1>
			</a>
			<div id="user-nav">
				@await Html.PartialAsync("_UserNav")
			</div>
		</header><!-- Top header end -->
		<!-- Top nav -->
		<div id="site-nav">
			<nav class="navbar navbar-expand-md">
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-nav" aria-controls="main-nav" aria-expanded="false" aria-label="Main navigation">
					<span><i class="fa fa-bars" aria-hidden="true"></i> Menu</span>
				</button>
				<div id="main-nav" class="collapse navbar-collapse">
					<ul class="navbar-nav mr-auto">
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Home" asp-action="">
								<i class="fa fa-home" aria-hidden="true"></i> Home
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Info">
								<i class="fa fa-info-circle" aria-hidden="true"></i> Info
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Promos">
								<i class="fa fa-tag" aria-hidden="true"></i> Promos
							</a>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="movies-cat-menu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<i class="fa fa-film" aria-hidden="true"></i> Movies
							</a>
							@await Component.InvokeAsync("MoviesMenu")
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Order" asp-action="Index">
								<i class="fa fa-hand-pointer-o" aria-hidden="true"></i> Order
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">
								<i class="fa fa-envelope" aria-hidden="true"></i> Contact
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Home" asp-action="FAQ">
								<i class="fa fa-question-circle" aria-hidden="true"></i> FAQ
							</a>
						</li>
						@await Html.PartialAsync("_AdminLink")
					</ul>
					<form asp-area="" asp-controller="Search" asp-action="S" method="get" class="form-inline search-form">
						<input type="search" placeholder="Search for movie..." aria-label="Search for" name="find" class="search-control" />
						<select name="filter" class="search-control">
							<option value="title">By Title</option>
							<option value="director">By Director</option>
							<option value="actor">By Actor</option>
							<option value="plot">By Plot</option>
						</select>
						<button type="submit" class="btn btn-success search-button">
							<i class="fa fa-search" aria-hidden="true"></i>
						</button>
					</form>
				</div>
			</nav>
		</div><!-- Top nav end -->
		<!-- Main page content -->
		<div id="site-content" class="container-fluid">
			@RenderBody()
		</div>
		<!-- Site footer -->
		<footer id="site-footer" class="container-fluid">
			<p>Cinematicks by Zion Ay © 2018</p>
		</footer><!-- Site footer end -->
	</div><!-- Site wrapper end -->

	<environment include="Development">
		<script src="~/lib/jquery/jquery-3.2.1.js" type="text/javascript"></script>
		<script src="~/lib/popper/umd/popper.js" type="text/javascript"></script>
		<script src="~/lib/bootstrap/js/bootstrap.js" type="text/javascript"></script>
		<script src="~/js/main.js" type="text/javascript" asp-append-version="true"></script>
	</environment>
	<environment exclude="Development">
		<script src="https://code.jquery.com/jquery-3.2.1.min.js" type="text/javascript" asp-fallback-src="~/lib/jquery/jquery-3.2.1.min.js" asp-fallback-test="window.jQuery"></script>
		<script src="https://unpkg.com/popper.js" type="text/javascript" asp-fallback-src="~/lib/popper/umd/popper.js" asp-fallback-test="window.module"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js" type="text/javascript" asp-fallback-src="~/lib/bootstrap/js/bootstrap.min.js" asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"></script>
		<script src="~/js/main.min.js" type="text/javascript" asp-append-version="true"></script>
	</environment>
	@RenderSection("SlickSlider", required: false)
	@RenderSection("ModalTrailer", required: false)
	@RenderSection("Scripts", required: false)
</body>
</html>