@model Order

@{
	ViewData["Title"] = "Admin - Delete Order";
	var showInfo = Model.Tickets.First().Show;
}

<div class="content-section">
	<h2 class="content-title">Delete order</h2>
	<hr />
	<h3 class="content-subtitle">Order details</h3>
	<div class="row">
		<div class="col-12 col-md-6">
			<div class="flex-col">
				<span><strong>Order number:</strong> #@Model.ID</span>
				<span><strong>Client:</strong> @Model.Client.UserName</span>
				<span><strong>Movie:</strong> @showInfo.Movie.Title</span>
				<span><strong>Hall:</strong> @showInfo.Hall.Cinema.Name - @showInfo.Hall.Name</span>
				<span><strong>Show time:</strong> @showInfo.TimeShow</span>
				<span><strong>Tickets:</strong> @Model.Tickets.Count</span>
			</div>
		</div>
		<hr />
		<div class="col-12 text-center">
			<h3>Are you sure you want to delete this?</h3>
			<form asp-action="Delete">
				<input type="hidden" asp-for="ID" />
				<input type="submit" value="Delete" class="btn btn-danger" />
			</form>
		</div>
	</div>
</div>

<hr />

<div>
	<a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

