@model Image

@{
	ViewData["Title"] = "Admin - Delete Uploaded Image";
}


<div class="content-section">
	<h2 class="content-title">Delete image</h2>
	<hr />
	<h3 class="content-subtitle">Image details</h3>
	<div class="row">
		<div class="col-12 col-md-6">
			<div class="admin-delete-details">
				<span><strong>Name:</strong> @Model.Name</span>
				<span><strong>Category:</strong> @Model.Category.ToString()</span>
				<span><strong>Filename:</strong> @Model.Filename</span>
				<span><strong>Uploaded on:</strong> @Model.UploadedTime.ToString("dd/MM/yyyy HH:mm")</span>
				<span><strong>Photo:</strong></span>
				<div>
					<img class="img-fluid" src="~/images/@Model.FilePath" />
				</div>
			</div>
		</div>
		<hr />
		<div class="col-12 text-center">
			<h3>Are you sure you want to delete this?</h3>
			<form asp-action="Delete">
				<input type="hidden" asp-for="ID" />
				<input type="submit" value="Delete" class="btn btn-danger" />
			</form>
		</div>
	</div>
</div>

<hr />

<div>
	<a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

