@model Cinema

@{
	ViewData["Title"] = "Admin - Delete Cinema";
}

<div class="content-section">
	<h2 class="content-title">Delete cinema</h2>
	<hr />
	<h3 class="content-subtitle">Cinema details</h3>
	<div class="row">
		<div class="col-12 col-md-6">
			<div class="admin-delete-details">
				<span><strong>Name:</strong> @Model.Name</span>
				<span><strong>Halls:</strong> @Model.Halls.Count</span>
				<span><strong>Photos:</strong> @Model.Gallery.Count</span>
				<span><strong>Ticket price:</strong> @Model.Price$</span>
				<span><strong>Address:</strong> @Model.Location.FullAddress</span>
				<span><strong>About:</strong></span>
				<multiline text="@Model.About"></multiline>
				<span><strong>Photo:</strong></span>
				<div>
					<img class="img-fluid" src="~/images/@Model.Photo.FilePath" />
				</div>				
			</div>
		</div>
		<hr />
		<div class="col-12 text-center">
			<h3>Are you sure you want to delete this?</h3>
			<form asp-action="Delete">
				<input type="hidden" asp-for="ID" />
				<input type="submit" value="Delete" class="btn btn-danger" />
			</form>
		</div>
	</div>
</div>

<hr />

<div>
	<a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>


