@model Client


@{
    ViewData["Title"] = "Index";
    Layout = "_MyProfileLayout";
}

<div class="content-section">
	<h2 class="profile-title">Account details</h2>
	<div class="row">
		<div class="col-12 col-md-4 col-lg-3">
			<img class="img-fluid rounded" src="~/images/@Model.Avatar.FilePath" alt="User avatar" />
		</div>
		<div class="col-12 col-md-8 col-lg-9">
			<div class="row mb-1">
				<div class="col-3"><strong>Username:</strong></div>
				<div class="col-9">@Model.UserName</div>
			</div>
			<div class="row mb-1">
				<div class="col-3"><strong>Email:</strong></div>
				<div class="col-9">@Model.Email</div>
			</div>
			<div class="row mb-1">
				<div class="col-3"><strong>Password:</strong></div>
				<div class="col-9">**********</div>
			</div>
			<div class="row mb-3">
				<div class="col-3"><strong>Registered on:</strong></div>
				<div class="col-9">@Model.RegisterTime.ToString("dd/MM/yyyy")</div>
			</div>
			<div class="row mb-1">
				<div class="col-3"><strong>Total orders:</strong></div>
				<div class="col-9">@Model.Orders.Count</div>
			</div>
			<div class="row">
				<div class="col-3"><strong>Total reviews:</strong></div>
				<div class="col-9">@Model.Reviews.Count</div>
			</div>
		</div>
	</div>
</div>

