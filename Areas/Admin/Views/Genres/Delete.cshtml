@model Genre

@{
	ViewData["Title"] = "Admin - Delete Genre";
}

<div class="content-section">
	<h2 class="content-title">Delete genre</h2>
	<hr />
	<h3 class="content-subtitle">Genre details</h3>
	<div class="row">
		<div class="col-12 col-md-6">
			<div class="admin-delete-details">
				<span><strong>Name:</strong> @Model.Name</span>
				<span><strong>Movies:</strong> @Model.Movies.Count</span>
				<span><strong>Show in menu:</strong> @Model.InMenu.ToString()</span>
				<span><strong>Description:</strong> @Model.Description</span>
			</div>
		</div>
		<hr />
		<div class="col-12 text-center">
			<h3>Are you sure you want to delete this?</h3>
			<form asp-action="Delete">
				<input type="hidden" asp-for="ID" />
				<input type="submit" value="Delete" class="btn btn-danger" />
			</form>
		</div>
	</div>
</div>

<hr />

<div>
	<a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

