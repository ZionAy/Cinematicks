@model IEnumerable<Review>

@{
	ViewData["Title"] = "Admin - Reviews";
}

<div class="content-section">
	<h2 class="content-title">Reviews</h2>
	@Html.Partial("_Alert")
	<div class="admin-page-bar">
		<a asp-action="Create" class="btn btn-primary">New Review</a>
		<form asp-action="Index" class="form-inline search-form">
			<input type="search" placeholder="Search for review..." aria-label="Search for" name="find" class="search-control" />
			<button type="submit" class="btn btn-success search-button">
				<i class="fa fa-search" aria-hidden="true"></i>
			</button>
		</form>
	</div>
	<hr />

	<div class="row align-items-stretch">
		@if (Model.Count() > 0)
		{
			@foreach (Review review in Model)
			{
				<div class="col-12 col-sm-6 col-md-4 col-lg-3 align-items-stretch">
					<div class="admin-card">
						<h3 class="admin-card-header">Review #@review.ID</h3>
						<div class="admin-card-body">
							<span><strong>Client:</strong> @review.Client.UserName</span>
							<span><strong>Movie:</strong> @review.Movie.Title</span>
							<span><strong>Rating:</strong> @review.Rating</span>
							<span><strong>Posted on:</strong> @review.PostTime.ToString("dd/MM/yyyy HH:mm")</span>
						</div>
						<div class="admin-card-footer">
							<a asp-action="Edit" asp-route-id="@review.ID" class="btn btn-warning">Edit</a>
							<a asp-action="Info" asp-route-id="@review.ID" class="btn btn-info mx-1">Info</a>
							<a asp-action="Delete" asp-route-id="@review.ID" class="btn btn-danger">Delete</a>
						</div>
					</div>
				</div>
			}
		}
		else
		{
			<div class="col">
				<p>There are no reviews.</p>
			</div>
		}
	</div>
</div>

<hr />

<a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">Back to dashboard</a>


