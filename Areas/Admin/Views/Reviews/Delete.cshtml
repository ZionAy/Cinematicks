@model Review

@{
	ViewData["Title"] = "Admin - Delete Review";
}

<div class="content-section">
	<h2 class="content-title">Delete review</h2>
	<hr />
	<h3 class="content-subtitle">Review details</h3>
	<div class="row">
		<div class="col-12 col-md-6">
			<div class="admin-delete-details">
				<span><strong>Client:</strong> @Model.Client.UserName</span>
				<span><strong>Movie:</strong> @Model.Movie.Title</span>
				<span><strong>Posted on:</strong> @Model.PostTime.ToString("dd/MM/yyyy HH:mm")</span>
				<div>
					<span><strong>Rating:</strong> <stars rating="@Model.Rating"></stars> (@Model.Rating)</span>
				</div>
				<span><strong>Comment:</strong></span>
				<multiline text="@Model.Comment"></multiline>
			</div>
		</div>
		<hr />
		<div class="col-12 text-center">
			<h3>Are you sure you want to delete this?</h3>
			<form asp-action="Delete">
				<input type="hidden" asp-for="ID" />
				<input type="submit" value="Delete" class="btn btn-danger" />
			</form>
		</div>
	</div>
</div>

<hr />

<div>
	<a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>


