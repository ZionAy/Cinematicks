@model Hall

@{
	ViewData["Title"] = "Admin - Delete Hall";
}

<div class="content-section">
	<h2 class="content-title">Delete hall</h2>
	<hr />
	<h3 class="content-subtitle">Hall details</h3>
	<div class="row">
		<div class="col-12 col-md-6">
			<div class="admin-delete-details">
				<span><strong>In cinema:</strong> @Model.Cinema.Name</span>
				<span><strong>Name:</strong> @Model.Name</span>
				<span><strong>Rows:</strong> @Model.Rows</span>
				<span><strong>Seats:</strong> @Model.Cols</span>
				<span><strong>Shows:</strong> @Model.Shows.Count</span>
			</div>
		</div>
		<hr />
		<div class="col-12 text-center">
			<h3>Are you sure you want to delete this?</h3>
			<form asp-action="Delete">
				<input type="hidden" asp-for="ID" />
				<input type="submit" value="Delete" class="btn btn-danger" />
			</form>
		</div>
	</div>
</div>

<hr />

<div>
	<a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

