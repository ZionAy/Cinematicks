@model IEnumerable<Movie>

@{
	ViewData["Title"] = "Admin - Movies";
}

<div class="content-section">
	<h2 class="content-title">Movies</h2>
	@Html.Partial("_Alert")
	<div class="admin-page-bar">
		<a asp-action="Create" class="btn btn-primary">New Movie</a>
		<form asp-action="Index" class="form-inline search-form">
			<input type="search" placeholder="Search for movie..." aria-label="Search for" name="find" class="search-control" />
			<button type="submit" class="btn btn-success search-button">
				<i class="fa fa-search" aria-hidden="true"></i>
			</button>
		</form>
	</div>
	<hr />

	<div class="row align-items-stretch">
		@if (Model.Count() > 0)
		{
			@foreach (Movie movie in Model)
			{
				<div class="col-12 col-sm-6 col-md-4 col-lg-3 align-items-stretch">
					<div class="admin-card">
						<h3 class="admin-card-header">@movie.Title</h3>
						<div class="admin-card-body">
							<span><strong>Released on:</strong> @movie.Release.ToString("dd/MM/yyyy")</span>
							<span><strong>Time:</strong> @movie.Time mins</span>
							<span><strong>Rate:</strong> @movie.Rate.Code</span>
							<span><strong>Dubbed:</strong> @movie.IsDub.ToString()</span>
							<span><strong>Reviews:</strong> @movie.Reviews.Count</span>
							<div class="text-center">
								<img class="img-fluid rounded" src="~/images/@movie.Poster.FilePath" alt="Movie poster" />
							</div>
						</div>
						<div class="admin-card-footer">
							<a asp-action="Edit" asp-route-id="@movie.ID" class="btn btn-warning">Edit</a>
							<a asp-action="Info" asp-route-id="@movie.ID" class="btn btn-info mx-1">Info</a>
							<a asp-action="Delete" asp-route-id="@movie.ID" class="btn btn-danger">Delete</a>
						</div>
					</div>
				</div>
			}
		}
		else
		{
			<div class="col">
				<p>There are no movies.</p>
			</div>
		}
	</div>
</div>

<hr />

<a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">Back to dashboard</a>

