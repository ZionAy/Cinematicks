<!DOCTYPE html>
<html lang="en-us">
<head>
	<!-- Metadata Info -->
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />

	<!-- Website favicon -->
	<link rel="icon" href="~/favicon.ico" type="image/x-icon" />

	<!-- Load resources (Development uses original, Production uses CDNs and minified) -->
	<environment include="Development">
		<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" type="text/css" />
		<link rel="stylesheet" href="~/lib/fontawesome/css/font-awesome.css" type="text/css" />
		<link rel="stylesheet" href="~/css/main.css" type="text/css" asp-append-version="true" />
		<link rel="stylesheet" href="~/css/admin.css" type="text/css" asp-append-version="true" />
	</environment>
	<environment exclude="Development">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" type="text/css" asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css" asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
		<link rel="stylesheet" href="~/lib/fontawesome/css/font-awesome.min.css" type="text/css" />
		<link rel="stylesheet" href="~/css/main.min.css" type="text/css" asp-append-version="true" />
		<link rel="stylesheet" href="~/css/admin.min.css" type="text/css" asp-append-version="true" />
	</environment>

	<!-- Varela Round font from google (hebrew is supported) -->
	<link href="https://fonts.googleapis.com/css?family=Varela+Round&amp;subset=hebrew" rel="stylesheet">

	<!-- Title of the page -->
	<title>Cinematicks | @ViewData["Title"]</title>
</head>
<body>
	<!-- Site wrapper -->
	<div id="site-wrapper">
		<!-- Top header -->
		<header id="site-header">
			<a asp-area="" asp-controller="Home" asp-action="" id="site-logo">
				<img src="~/images/System/logo.png" alt="Logo" />
				<h1 class="d-none d-md-block">Cinematicks</h1>
			</a>
			<div id="user-nav">
				@await Html.PartialAsync("_UserNav")
			</div>
		</header><!-- Top header end -->
		<!-- Top nav -->
		<div id="site-nav">
			<nav class="navbar navbar-expand-md">
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-nav" aria-controls="main-nav" aria-expanded="false" aria-label="Main navigation">
					<span><i class="fa fa-bars" aria-hidden="true"></i> Menu</span>
				</button>
				<div id="main-nav" class="collapse navbar-collapse">
					<ul class="navbar-nav mr-auto">
						<li class="nav-item">
							<a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="">Dashboard</a>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="admin-cinema-menu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Cinema</a>
							<div class="dropdown-menu" aria-labelledby="admin-cinema-menu">
								<a asp-area="Admin" asp-controller="Cinemas" asp-action="Index" class="dropdown-item">Cinemas</a>
								<a asp-area="Admin" asp-controller="Halls" asp-action="Index" class="dropdown-item">Halls</a>
								<a asp-area="Admin" asp-controller="Gallery" asp-action="Index" class="dropdown-item">Gallery</a>
								<a asp-area="Admin" asp-controller="Promos" asp-action="Index" class="dropdown-item">Promos</a>
								<a asp-area="Admin" asp-controller="Locations" asp-action="Index" class="dropdown-item">Locations</a>
							</div>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="admin-movies-menu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Movies</a>
							<div class="dropdown-menu" aria-labelledby="admin-movies-menu">
								<a asp-area="Admin" asp-controller="Movies" asp-action="Index" class="dropdown-item">Movies</a>
								<a asp-area="Admin" asp-controller="Genres" asp-action="Index" class="dropdown-item">Genres</a>
								<a asp-area="Admin" asp-controller="Rates" asp-action="Index" class="dropdown-item">Rates</a>
								<a asp-area="Admin" asp-controller="Shows" asp-action="Index" class="dropdown-item">Shows</a>
							</div>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="admin-clients-menu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Clients</a>
							<div class="dropdown-menu" aria-labelledby="admin-clients-menu">
								<a asp-area="Admin" asp-controller="Clients" asp-action="Index" class="dropdown-item">Clients</a>
								<a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="dropdown-item">Orders</a>
								<a asp-area="Admin" asp-controller="Reviews" asp-action="Index" class="dropdown-item">Reviews</a>
							</div>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="Admin" asp-controller="Images" asp-action="Index">Images</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Home" asp-action="">Back To Site</a>
						</li>
					</ul>
				</div>
			</nav>
		</div><!-- Top nav end -->
		<!-- Main page content -->
		<div id="site-content" class="container-fluid">
			@RenderBody()
		</div>
		<!-- Site footer -->
		<footer id="site-footer" class="container-fluid">
			<p>Cinematicks by Zion Ay © 2018</p>
		</footer><!-- Site footer end -->
	</div><!-- Site wrapper end -->

	<environment include="Development">
		<script src="~/lib/jquery/jquery-3.2.1.js" type="text/javascript"></script>
		<script src="~/lib/popper/umd/popper.js" type="text/javascript"></script>
		<script src="~/lib/bootstrap/js/bootstrap.js" type="text/javascript"></script>
		<script src="~/js/main.js" type="text/javascript" asp-append-version="true"></script>
		<script src="~/js/admin.js" type="text/javascript" asp-append-version="true"></script>
	</environment>
	<environment exclude="Development">
		<script src="https://code.jquery.com/jquery-3.2.1.min.js" type="text/javascript" asp-fallback-src="~/lib/jquery/jquery-3.2.1.min.js" asp-fallback-test="window.jQuery"></script>
		<script src="https://unpkg.com/popper.js" type="text/javascript" asp-fallback-src="~/lib/popper/umd/popper.js" asp-fallback-test="window.module"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js" type="text/javascript" asp-fallback-src="~/lib/bootstrap/js/bootstrap.min.js" asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"></script>
		<script src="~/js/main.min.js" type="text/javascript" asp-append-version="true"></script>
		<script src="~/js/admin.min.js" type="text/javascript" asp-append-version="true"></script>
	</environment>
	@RenderSection("Scripts", required: false)
</body>
</html>