@model PhotoGal

@{
	ViewData["Title"] = "Admin - Create Photo Gallery";
}

<div class="content-section">
	<h2 class="content-title">Create new photo gallery</h2>
	<hr />
	@Html.Partial("_Alert")
	<form asp-action="Create" role="form">
		<div class="row">
			<div asp-validation-summary="ModelOnly" class="col-12 text-danger"></div>
		</div>
		<div class="row">
			<div class="form-group col-12 col-sm-6 col-md-4 col-lg-3">
				<label asp-for="Title" class="control-label"></label>
				<input asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="form-group col-12 col-md-6">
				<label asp-for="Description" class="control-label"></label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="form-group col-12 col-sm-6 col-md-4 col-lg-3">
				<div class="checkbox">
					<label>
						@Html.DisplayNameFor(p => p.IsActive) <input asp-for="IsActive" />
					</label>
				</div>
				<span asp-validation-for="IsActive" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="form-group col-12 col-md-6">
				<label asp-for="CinemaID" class="control-label"></label>
				<select asp-for="CinemaID" class="form-control" asp-items="ViewBag.CinemaID">
					<option selected="selected" disabled="disabled">Choose Cinema...</option>
				</select>
				<span asp-validation-for="CinemaID" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="form-group col-12 col-sm-6 col-md-4 col-lg-3">
				<label asp-for="PhotoID" class="control-label"></label>
				<select id="admin-image-select" asp-for="PhotoID" class="form-control" asp-items="ViewBag.PhotoID">
					<option selected="selected" disabled="disabled">Choose Image...</option>
				</select>
				<span asp-validation-for="PhotoID" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div id="admin-image-preview" class="col-12 col-sm-6 col-md-4 col-lg-3"></div>
		</div>
		<div class="row">
			<div class="form-group col-12 text-center">
				<input type="submit" value="Create!" class="btn btn-success" />
			</div>
		</div>
	</form>
</div>

<hr />

<div>
	<a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

