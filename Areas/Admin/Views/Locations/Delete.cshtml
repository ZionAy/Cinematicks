@model Location

@{
	ViewData["Title"] = "Admin - Delete Location";
}

<div class="content-section">
	<h2 class="content-title">Delete location</h2>
	<hr />
	<h3 class="content-subtitle">Location details</h3>
	<div class="row">
		<div class="col-12 col-md-6">
			<div class="admin-delete-details">
				<span><strong>Address:</strong> @Model.FullAddress</span>
				<span><strong>Cinemas:</strong> @Model.Cinemas.Count</span>
				<span><strong>Directions:</strong></span>
				<multiline text="@Model.Directions"></multiline>
				<span><strong>Map:</strong></span>
				<div>
					<img class="img-fluid" src="~/images/@Model.Map.FilePath" />
				</div>
			</div>
		</div>
		<hr />
		<div class="col-12 text-center">
			<h3>Are you sure you want to delete this?</h3>
			<form asp-action="Delete">
				<input type="hidden" asp-for="ID" />
				<input type="submit" value="Delete" class="btn btn-danger" />
			</form>
		</div>
	</div>
</div>

<hr />

<div>
	<a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
