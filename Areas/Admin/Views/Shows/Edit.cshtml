@model Show

@{
	ViewData["Title"] = "Admin - Edit Show";
}

<div class="content-section">
	<h2 class="content-title">Edit show #@Model.ID</h2>
	<hr />
	<form asp-action="Edit" role="form">
		<input type="hidden" asp-for="ID" />
		<div class="row">
			<div asp-validation-summary="ModelOnly" class="col-12 text-danger"></div>
		</div>
		<div class="row">
			<div class="form-group col-12 col-md-6">
				<label asp-for="HallID" class="control-label"></label>
				<select asp-for="HallID" class="form-control" asp-items="ViewBag.HallID">
					<option selected="selected" disabled="disabled">Choose Hall...</option>
				</select>
				<span asp-validation-for="HallID" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="form-group col-12 col-md-6">
				<label asp-for="MovieID" class="control-label"></label>
				<select asp-for="MovieID" class="form-control" asp-items="ViewBag.MovieID">
					<option selected="selected" disabled="disabled">Choose Movie...</option>
				</select>
				<span asp-validation-for="MovieID" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="form-group col-12 col-sm-6 col-md-4 col-lg-3">
				<label asp-for="ShowDate" class="control-label"></label>
				<input asp-for="ShowDate" class="form-control" />
				<span asp-validation-for="ShowDate" class="text-danger"></span>
			</div>
			<div class="form-group col-12 col-sm-6 col-md-4 col-lg-3">
				<label asp-for="ShowTime" class="control-label"></label>
				<input asp-for="ShowTime" class="form-control" />
				<span asp-validation-for="ShowTime" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="form-group col-12 text-center">
				<input type="submit" value="Save!" class="btn btn-success" />
			</div>
		</div>
	</form>
</div>

<hr />

<div>
	<a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


