@model Show

@{
	ViewData["Title"] = "Admin - Delete Show";
}

<div class="content-section">
	<h2 class="content-title">Delete show</h2>
	<hr />
	<h3 class="content-subtitle">Show details</h3>
	<div class="row">
		<div class="col-12 col-md-6">
			<div class="admin-delete-details">
				<span><strong>Hall:</strong> @Model.Hall.Name - @Model.Hall.Cinema.Name</span>
				<span><strong>Starting on:</strong> @Model.TimeShow</span>
				<span><strong>Tickets booked:</strong> @Model.Tickets.Count</span>
				<span><strong>Duration:</strong> @Model.Movie.Time mins</span>
				<span><strong>Movie:</strong> @Model.Movie.Title</span>
				<div>
					<img class="img-fluid" src="~/images/@Model.Movie.Poster.FilePath" />
				</div>
			</div>
		</div>
		<hr />
		<div class="col-12 text-center">
			<h3>Are you sure you want to delete this?</h3>
			<form asp-action="Delete">
				<input type="hidden" asp-for="ID" />
				<input type="submit" value="Delete" class="btn btn-danger" />
			</form>
		</div>
	</div>
</div>

<hr />

<div>
	<a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>


